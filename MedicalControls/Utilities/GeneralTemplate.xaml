<ResourceDictionary
    x:Class="EPIC.MedicalControls.Utilities.GeneralTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:entity="EPIC.DataLayer.Entities;assembly=DataLayer"
    xmlns:local="EPIC.MedicalControls.Utilities;assembly=MedicalControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="local">
	<!--  Unknown connection ID: 1  -->
	<DataTemplate x:Key="PatientLinkTemplate" DataType="entity:Permission">
		<TextBlock
            Focusable="False"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource TemplatedParent}}"
            TextWrapping="Wrap">
			<Run Focusable="False" Text="{Binding Path=Description, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
			<Hyperlink Click="Hyperlink_Click">
				<Run FontWeight="Normal" Text="Load permissions from " />
				<Run FontWeight="Bold" Text="{Binding Path=Simplified, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
			</Hyperlink>
		</TextBlock>
	</DataTemplate>
	<local:GeneralTemplateSelector
        x:Key="AnyTypeEditor"
        CheckboxTemplate="{StaticResource MetroCheckboxTemplate}"
        DefaultTemplate="{StaticResource BasicTextTemplate}"
        LinkTemplate="{StaticResource PatientLinkTemplate}" />
</ResourceDictionary>
