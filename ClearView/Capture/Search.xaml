<Page
    x:Class="EPIC.ClearView.Capture.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Search Captures">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="Find" UriSource="/Resources/0025-search.png" />
            <BitmapImage x:Key="ExportData" UriSource="/Resources/0002-folder_doc.png" />
            <BitmapImage x:Key="ViewReport" UriSource="/Resources/0009-doc_search.png" />
            <BitmapImage x:Key="ViewCalibration" UriSource="/Resources/0021-options_search.png" />
            <BitmapImage x:Key="ViewCapture" UriSource="/Resources/0175-camera.png" />
            <BitmapImage x:Key="Compare" UriSource="/Resources/billing_update.gif" />
            <BitmapImage x:Key="Captures" UriSource="/Resources/0176-scaner.png" />
            <ribbon:RibbonTab x:Key="SearchOptions">
                <RibbonTab.Header>
                    <TextBlock
                        Margin="-10,-10,-10,0"
                        Padding="10,10,10,0"
                        Text="Search">
                        <TextBlock.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Offset="0" Color="#AA0000FF" />
                                    <GradientStop Offset="1" Color="#000000FF" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </TextBlock.Background>
                    </TextBlock>
                </RibbonTab.Header>
                <ribbon:RibbonGroup Header="Patient">
                    <ribbon:RibbonToggleButton
                        IsChecked="True"
                        Label="Search"
                        LargeImageSource="{StaticResource Captures}"
                        Unchecked="RibbonToggleButton_Unchecked" />
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup Header="Actions">
                    <ribbon:RibbonButton Label="Export Data" LargeImageSource="{StaticResource ExportData}" />
                    <ribbon:RibbonButton Label="View Report" LargeImageSource="{StaticResource ViewReport}" />
                    <ribbon:RibbonButton Label="View Calibration" LargeImageSource="{StaticResource ViewCalibration}" />
                    <ribbon:RibbonButton Label="View Capture" LargeImageSource="{StaticResource ViewCapture}" />
                    <ribbon:RibbonButton Label="Compare" LargeImageSource="{StaticResource Compare}" />
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Search:" />
            <TextBox
                Name="SearchText"
                Grid.Column="1"
                MinWidth="100"
                Margin="5"
                VerticalAlignment="Center"
                TextChanged="Search_TextChanged" />
            <Button
                Grid.Column="2"
                Margin="5"
                Padding="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="20"
                        Height="20"
                        Margin="3,0"
                        Source="{StaticResource Find}" />
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Find</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Column="0" Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Status: 0 records found" />
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource ExportData}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Export Data</TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="ViewReport_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource ViewReport}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">View Report</TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource ViewCalibration}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">View Calibration</TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource ViewCapture}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">View Capture</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <DataGrid
            Name="Treatments"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            SelectionMode="Extended">
            <DataGrid.RowHeaderTemplate>
                <DataTemplate>
                    <CheckBox Name="RowCheck" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}" />
                </DataTemplate>
            </DataGrid.RowHeaderTemplate>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" Header="Patient Name" />
                <DataGridTextColumn Binding="{x:Null}" Header="Treatment Id" />
                <DataGridTextColumn Binding="{x:Null}" Header="Version" />
                <DataGridTextColumn Binding="{x:Null}" Header="Run Notes" />
                <DataGridTextColumn Binding="{x:Null}" Header="Scan Type" />
                <DataGridTextColumn Binding="{x:Null}" Header="Scan Date" />
                <DataGridCheckBoxColumn Binding="{x:Null}" Header="Archived" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
