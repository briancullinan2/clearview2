<Page
    x:Class="EPIC.ClearView.Pages.Patient.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:capture="clr-namespace:EPIC.ClearView.Pages.Capture"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:patient="clr-namespace:EPIC.ClearView.Pages.Patient"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    Title="Search Patients"
    mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
                <ResourceDictionary Source="/Themes/Patient/Search.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ribbon:Ribbon Margin="0,-120,0,0" Style="{StaticResource PlainRibbonStyle}">
            <ribbon:RibbonTab
                Background="#AA0000FF"
                Header="Search"
                HeaderStyle="{StaticResource ContextualHeaderStyle}"
                ItemsSource="{StaticResource SearchOptions}"
                Style="{StaticResource ContextualTabStyle}" />
        </ribbon:Ribbon>

        <ContentControl Style="{StaticResource SearchControlStyle}" />

        <Grid Column="0" Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Status: 0 records found" />
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Export_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource ExportData}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Export Data</TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{DynamicResource ShowTabCommand}"
                    CommandParameter="{x:Type patient:Add}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource NewPatient}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">New Patient</TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{DynamicResource ShowTabCommand}"
                    CommandParameter="{x:Type capture:Scan}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource NewCapture}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">New Capture</TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Margin="5"
                    Padding="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="3,0"
                            Source="{StaticResource ViewPatient}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">View Patient</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <DataGrid
            Name="Patients"
            Grid.Row="1"
            d:MinHeight="300"
            AutoGenerateColumns="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            SelectionMode="Extended">
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowHeaderTemplate>
                <DataTemplate>
                    <CheckBox Name="RowCheck" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}" />
                </DataTemplate>
            </DataGrid.RowHeaderTemplate>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                <DataGridTextColumn Binding="{Binding Gender}" Header="Gender" />
                <DataGridTextColumn Binding="{Binding PatientId}" Header="Patient Id" />
                <DataGridTextColumn Binding="{Binding BirthDate, StringFormat={}{0:ddMMMyyyy}}" Header="Birth Date" />
                <DataGridCheckBoxColumn Binding="{x:Null}" Header="Archived" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
