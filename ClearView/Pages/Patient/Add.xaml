<Page
    x:Class="EPIC.ClearView.Pages.Patient.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customization="clr-namespace:EPIC.DataLayer.Customization;assembly=DataLayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:patient="clr-namespace:EPIC.MedicalControls.Controls.Patient;assembly=MedicalControls"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    Title="Add Patient"
    mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MedicalControls;component/Controls/Patient/Add.xaml" />
                <ResourceDictionary Source="/Themes/Patient/Add.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="NewCapture" UriSource="/Resources/0175-camera.png" />
            <BitmapImage x:Key="Save" UriSource="/Resources/0040-save.png" />
            <BitmapImage x:Key="Cancel" UriSource="/Resources/1001-cancel.png" />
            <BitmapImage x:Key="NewPatient" UriSource="/Resources/Person-add.jpg" />
            <ObjectDataProvider
                x:Key="GenderData"
                MethodName="GetValues"
                ObjectType="{x:Type system:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="customization:Gender" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ribbon:Ribbon Margin="0,-120,0,0" Style="{StaticResource PlainRibbonStyle}">
            <ribbon:RibbonTab
                Background="#AA008080"
                Header="Search"
                HeaderStyle="{StaticResource ContextualHeaderStyle}"
                ItemsSource="{StaticResource AddOptions}"
                Style="{StaticResource ContextualTabStyle}" />
        </ribbon:Ribbon>

        <ContentControl Grid.Row="1" Style="{StaticResource SaveAndCloseActionFooter}" />

        <TabControl TabStripPlacement="Left">
            <TabItem Header="Demographics">
                <UniformGrid
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Columns="2">
                    <GroupBox
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Header="Login Info">
                        <FrameworkElement.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.MergedDictionaries>
                                    <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
                                </ResourceDictionary.MergedDictionaries>
                            </ResourceDictionary>
                        </FrameworkElement.Resources>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <patient:AddBasic Panel.ZIndex="9" Style="{StaticResource PatientEntityStyle}" />
                        </ScrollViewer>
                    </GroupBox>
                </UniformGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
