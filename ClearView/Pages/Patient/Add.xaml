<Page
    x:Class="EPIC.ClearView.Pages.Patient.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customization="clr-namespace:EPIC.DataLayer.Customization;assembly=DataLayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:EPIC.DataLayer.Helpers;assembly=DataLayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:patient="clr-namespace:EPIC.ClearView.Pages.Patient;assembly=EPICClearView"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    Title="Add Patient"
    mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Patient/Add.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="NewCapture" UriSource="/Resources/0175-camera.png" />
            <BitmapImage x:Key="Save" UriSource="/Resources/0040-save.png" />
            <BitmapImage x:Key="Cancel" UriSource="/Resources/1001-cancel.png" />
            <BitmapImage x:Key="NewPatient" UriSource="/Resources/Person-add.jpg" />
            <ObjectDataProvider
                x:Key="GenderData"
                MethodName="GetValues"
                ObjectType="{x:Type system:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="customization:Gender" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ribbon:Ribbon Margin="0,-120,0,0" Style="{StaticResource PlainRibbonStyle}">
            <ribbon:RibbonTab
                Background="#AA008080"
                Header="Search"
                HeaderStyle="{StaticResource ContextualHeaderStyle}"
                ItemsSource="{StaticResource AddOptions}"
                Style="{StaticResource ContextualTabStyle}" />
        </ribbon:Ribbon>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Name="Save"
                Margin="5"
                Padding="3"
                Click="Save_Click"
                IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="25"
                        Height="25"
                        Margin="3,0"
                        Source="{StaticResource Save}">
                        <FrameworkElement.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Button}}}" Value="False">
                                        <Setter Property="UIElement.Opacity" Value=".5" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </FrameworkElement.Style>
                    </Image>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="Save Changes" />
                </StackPanel>
            </Button>
            <Button
                Margin="5"
                Padding="3"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="25"
                        Height="25"
                        Margin="3,0"
                        Source="{StaticResource Cancel}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="Close" />
                </StackPanel>
            </Button>
        </StackPanel>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Demographics">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="First Name:" />
                        <TextBox
                            Name="FirstName"
                            Grid.Row="1"
                            MinWidth="150"
                            Margin="5"
                            MaxLength="{x:Static helpers:PatientFields+FirstName.MaxLength}"
                            Text="{Binding Path=Patient.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Content="MI:" />
                        <TextBox
                            Name="MiddleInitial"
                            Grid.Row="1"
                            Grid.Column="1"
                            MinWidth="30"
                            Margin="5"
                            MaxLength="1"
                            Text="{Binding Path=Patient.MiddleInitial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Content="Last Name:" />
                        <TextBox
                            Name="LastName"
                            Grid.Row="1"
                            Grid.Column="2"
                            MinWidth="150"
                            Margin="5"
                            MaxLength="{x:Static helpers:PatientFields+FirstName.MaxLength}"
                            Text="{Binding Path=Patient.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                        <Label Grid.Row="2" Content="Birth Date:" />
                        <DatePicker
                            Name="BirthDate"
                            Grid.Row="3"
                            Margin="5"
                            VerticalAlignment="Center"
                            SelectedDateChanged="BirthDate_SelectedDateChanged"
                            Text="{Binding Path=Patient.BirthDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Content="Age:" />
                        <TextBox
                            Name="Age"
                            Grid.Row="3"
                            Grid.Column="1"
                            MinWidth="30"
                            Margin="5"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            IsTabStop="False" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="2"
                            Content="Gender:" />
                        <ComboBox
                            Name="Gender"
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="5"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Source={StaticResource GenderData}}"
                            SelectedItem="{Binding Path=Patient.Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
