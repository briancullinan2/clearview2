<Page
    x:Class="EPIC.ClearView.Pages.Capture.Manage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Account Management"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Capture/Manage.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ribbon:Ribbon Margin="0,-120,0,0" Style="{StaticResource PlainRibbonStyle}">
            <ribbon:RibbonTab
                Header="Permissions"
                ItemsSource="{StaticResource ManageOptions}"
                Style="{StaticResource ContextualTabStyle}">
                <ribbon:RibbonTab.HeaderStyle>
                    <Style BasedOn="{StaticResource ContextualHeaderStyle}" TargetType="{x:Type ribbon:RibbonTabHeader}">
                        <Setter Property="FocusedBackground" Value="#AAFF0000" />

                    </Style>
                </ribbon:RibbonTab.HeaderStyle>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>

        <StackPanel MaxWidth="250" />
        <Frame
            Name="Navigator"
            Grid.Column="1"
            ClipToBounds="True"
            Source="https://google.com" />
    </Grid>
</Page>
