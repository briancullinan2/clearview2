<Page
    x:Class="EPIC.ClearView.Pages.User.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:general="clr-namespace:EPIC.MedicalControls.Themes;assembly=MedicalControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reflection="clr-namespace:System.Reflection;assembly=mscorlib"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="Add User"
    SizeChanged="Page_SizeChanged"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <d:Page.DataContext>
        <d:DesignInstance IsDesignTimeCreatable="True" Type="general:Models" />
    </d:Page.DataContext>
    <Page.DataContext>
        <general:Models />
    </Page.DataContext>
    <general:Models.PassPageToViewModel>
        True
    </general:Models.PassPageToViewModel>
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="Save" UriSource="/Resources/0040-save.png" />
            <BitmapImage x:Key="Cancel" UriSource="/Resources/1001-cancel.png" />
            <BitmapImage x:Key="NewUser" UriSource="/Resources/4505-user_add.png" />
            <ribbon:RibbonTab x:Key="UserOptions">
                <RibbonTab.Header>
                    <TextBlock
                        Margin="-10,-10,-10,0"
                        Padding="10,10,10,0"
                        Text="Options">
                        <TextBlock.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Offset="0" Color="#AAEE82EE" />
                                    <GradientStop Offset="1" Color="#00EE82EE" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </TextBlock.Background>
                    </TextBlock>
                </RibbonTab.Header>
                <ribbon:RibbonGroup Header="User Options">
                    <ribbon:RibbonToggleButton
                        IsChecked="True"
                        Label="New User"
                        LargeImageSource="{StaticResource NewUser}"
                        Unchecked="RibbonToggleButton_Unchecked" />
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup Header="Actions">
                    <ribbon:RibbonButton
                        Click="SaveClose_Click"
                        Label="Save and Close"
                        LargeImageSource="{StaticResource Save}" />
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>

            <Style x:Key="UserEntityStyle" TargetType="{x:Type ItemsControl}">
                <Style.Triggers />
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <ContentPresenter x:Name="Presenter">
                                <ContentPresenter.ContentTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Name}" Foreground="Gray" />
                                    </DataTemplate>
                                </ContentPresenter.ContentTemplate>
                            </ContentPresenter>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding PropertyType}" Value="{x:Type system:String}">
                                    <Setter TargetName="Presenter" Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Name}" Value="MiddleInitial">
                                                        <Setter TargetName="PropertyName" Property="MaxWidth" Value="60" />
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                                <StackPanel>
                                                    <Label Content="{Binding Name}" FontWeight="Bold" />
                                                    <TextBox Name="PropertyName" Text="{Binding Value}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </FrameworkElement.Resources>


    <Grid>
        <FrameworkElement.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </FrameworkElement.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid
            Panel.ZIndex="10"
            AutoGenerateColumns="True"
            ItemsSource="{Binding Path=UserProperties}"
            Visibility="Collapsed" />

        <ContentControl
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Style="{StaticResource SaveAndCloseActionFooter}" />
        <WrapPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <GroupBox
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Header="Login Info">
                <FrameworkElement.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </FrameworkElement.Resources>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="200" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Content="User Name:" />
                        <TextBox
                            Grid.Row="1"
                            Margin="5"
                            Text="{Binding User.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                        <Label Grid.Row="2" Content="Password:" />
                        <PasswordBox Grid.Row="3" Margin="5" />
                        <Label Grid.Row="4" Content="Confirm Password:" />
                        <PasswordBox Grid.Row="5" Margin="5" />
                        <CheckBox
                            Grid.RowSpan="6"
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Top"
                            Content="Enabled"
                            IsChecked="{Binding User.IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                    </Grid>
                </ScrollViewer>
            </GroupBox>
            <GroupBox
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Header="General Info">
                <FrameworkElement.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </FrameworkElement.Resources>
                <ScrollViewer
                    Grid.ColumnSpan="2"
                    Padding="5"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ItemsControl
                            Panel.ZIndex="9"
                            ItemsSource="{Binding Path=UserProperties}"
                            Style="{StaticResource UserEntityStyle}" />

                        <!--<Label Content="First Name:" />
                            <TextBox
                            Grid.Row="1"
                            MinWidth="150"
                            Margin="5"
                            Text="{Binding User.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                            <Label Grid.Column="2" Content="Last Name:" />
                            <TextBox
                            Grid.Row="1"
                            Grid.Column="2"
                            MinWidth="150"
                            Margin="5"
                            Text="{Binding User.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                            <Label
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Content="E-mail:" />
                            <TextBox
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="5"
                            Text="{Binding User.EmailAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}}" />
                        -->
                    </Grid>
                </ScrollViewer>
            </GroupBox>
            <GroupBox Header="Role Assignment">
                <FrameworkElement.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="/MedicalControls;component/Themes/ClearView.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </FrameworkElement.Resources>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ListBox
                        MinWidth="300"
                        MinHeight="150"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <FrameworkElement.Resources>
                            <ResourceDictionary>
                                <Style x:Key="{x:Type ListBoxItem}" TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="FrameworkElement.UseLayoutRounding" Value="True" />
                                    <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
                                    <Setter Property="FrameworkElement.OverridesDefaultStyle" Value="True" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <CheckBox Content="{Binding Path=Name}" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource TemplatedParent}}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ResourceDictionary>
                        </FrameworkElement.Resources>
                    </ListBox>
                </ScrollViewer>
            </GroupBox>
        </WrapPanel>
    </Grid>
</Page>
