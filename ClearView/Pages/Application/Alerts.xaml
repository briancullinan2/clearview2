<Page
    x:Class="EPIC.ClearView.Pages.Application.Alerts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entityClasses="clr-namespace:EPIC.DataLayer.Entities;assembly=DataLayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    Title="Alerts"
    d:Height="200"
    d:Width="300"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Application/Alerts.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ribbon:Ribbon
            Grid.ColumnSpan="2"
            Margin="0,-120,0,0"
            Style="{StaticResource PlainRibbonStyle}">
            <ribbon:RibbonTab
                Header="Alerts"
                ItemsSource="{StaticResource AlertsTabs}"
                Style="{StaticResource ContextualTabStyle}">
                <ribbon:RibbonTab.HeaderStyle>
                    <Style BasedOn="{StaticResource ContextualHeaderStyle}" TargetType="{x:Type ribbon:RibbonTabHeader}">
                        <Setter Property="FocusedBackground" Value="#AAFFFF00" />

                    </Style>
                </ribbon:RibbonTab.HeaderStyle>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>

        <ContentControl Grid.ColumnSpan="2" Style="{StaticResource SearchControlStyle}" />

        <StackPanel Grid.Row="2">
            <Label Content="{Binding ElementName=Messages, Path=Items.Count}" ContentStringFormat="Displaying: {0}" />
            <Label Content="{Binding Total}" ContentStringFormat="Total Records: {0}" />
        </StackPanel>
        <ContentControl
            Grid.Row="2"
            Grid.Column="1"
            Style="{StaticResource StandardActionFooter}" />
        <DataGrid
            Name="Messages"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            CellStyle="{StaticResource CopyPasteDataColumnCellStyle}"
            RowStyle="{StaticResource FlatTerminalRow}"
            Style="{StaticResource FlatTerminalGrid}">
            <FrameworkElement.Resources>
                <ResourceDictionary />
            </FrameworkElement.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=CreateTime}" Header="Time" />
                <DataGridTextColumn Binding="{Binding Path=MessageType}" Header="Type" />
                <DataGridTextColumn Binding="{Binding Path=Source}" Header="Source" />
                <DataGridTextColumn Binding="{Binding Path=Title}" Header="Title" />
                <DataGridTextColumn Binding="{Binding Path=Body}" Header="Message" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
