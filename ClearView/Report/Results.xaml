<Page
	x:Class="EPIC.Report.Results" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:report="clr-namespace:EPIC.Report"
	Title="Results"
	SnapsToDevicePixels="True"
	UseLayoutRounding="True"
	DataContext="{Binding RelativeSource={RelativeSource Self}}"
	Loaded="Results_Loaded"
	SizeChanged="Results_SizeChanged">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary
					Source="/Report/Resources/Report.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<BitmapImage
				UriSource="/Report/Resources/Clearview-background.jpg"
				x:Key="GridBackground" />
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="300" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid
			ColumnSpan="3"
			Background="#77BB44"
			TextBlock.Foreground="#FFFFFFFF">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<TextBlock
				Text="Patient Treatment" />
			<TextBlock
				Grid.Row="1"
				Text="Patient Name"
				HorizontalAlignment="Right" />
			<TextBlock
				Grid.Row="2"
				Text="Birthdate"
				HorizontalAlignment="Right" />
			<TextBlock
				Grid.Row="3"
				Text="Age"
				HorizontalAlignment="Right" />
			<TextBlock
				Grid.Row="4"
				Text="Gender"
				HorizontalAlignment="Right" />
			<TextBlock
				Grid.Row="5"
				Text="Visit Date"
				HorizontalAlignment="Right" />
			<StackPanel
				Grid.Column="1"
				Grid.Row="1"
				HorizontalAlignment="Left"
				Orientation="Horizontal">
				<TextBlock
					Text="{Binding Patient.FirstName}" />
				<TextBlock
					Text="{Binding Patient.LastName}" />
			</StackPanel>
			<TextBlock
				Grid.Column="1"
				Grid.Row="2"
				HorizontalAlignment="Left"
				Text="{Binding Patient.BirthDate}" />
			<TextBlock
				Grid.Column="1"
				Grid.Row="3"
				Text="Age"
				HorizontalAlignment="Left" />
			<TextBlock
				Grid.Column="1"
				Grid.Row="4"
				HorizontalAlignment="Left"
				Text="{Binding Patient.Gender}" />
			<TextBlock
				Grid.Column="1"
				Grid.Row="5"
				HorizontalAlignment="Left"
				Text="{Binding Fingers.TimeScanned}" />
			<TextBlock
				Grid.Column="2"
				Text="Physical Left"
				HorizontalAlignment="Center"
				Background="#FF808080"
				Padding="5" />
			<TextBlock
				Grid.Column="3"
				Text="Physical Right"
				HorizontalAlignment="Center"
				Background="#FF808080"
				Padding="5" />
			<TextBlock
				Grid.Column="4"
				Text="Autonomic Left"
				HorizontalAlignment="Center"
				Background="#FF808080"
				Padding="5" />
			<TextBlock
				Grid.Column="5"
				Text="Autonomic Right"
				HorizontalAlignment="Center"
				Background="#FF808080"
				Padding="5" />
			<GroupBox
				Margin="5"
				Grid.Column="6"
				Grid.RowSpan="6"
				Header="Administrator Options"
				HorizontalAlignment="Right">
				<StackPanel
					VerticalAlignment="Center">
					<RadioButton
						Content="Black and White Biofield Images" />
					<RadioButton
						Content="Color Biodfield Images" />
				</StackPanel>
			</GroupBox>
		</Grid>
		<Image
			Grid.Row="1"
			Grid.ColumnSpan="3"
			HorizontalAlignment="Left"
			Height="Auto"
			Width="Auto"
			Source="{StaticResource GridBackground}" />
		<StackPanel
			Grid.Row="1"
			Grid.Column="1" />
		<DocumentViewer
			Name="Viewer"
			Panel.ZIndex="10"
			Grid.Row="1"
			Grid.Column="2"
			Style="{StaticResource PlainDocumentViewer}"
			Document="{Binding Document}"
			Hyperlink.RequestNavigate="Document_Navigate" />
	</Grid>
</Page>
