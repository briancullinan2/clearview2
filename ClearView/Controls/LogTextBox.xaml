<TextBox
	x:Class="EPIC.Controls.LogTextBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
	AcceptsReturn="True"
	ScrollViewer.HorizontalScrollBarVisibility="Auto"
	IsReadOnly="True"
	ScrollViewer.VerticalScrollBarVisibility="Auto" xmlns:controls="clr-namespace:EPIC.Controls"
	Loaded="TextBox_Loaded"
	Unloaded="TextBox_Unloaded">
	<Control.Template>
		<ControlTemplate
			TargetType="{x:Type TextBoxBase}">
			<themes:ListBoxChrome
				Name="Bd"
				BorderBrush="{TemplateBinding BorderBrush}"
				BorderThickness="{TemplateBinding BorderThickness}"
				Background="{TemplateBinding Background}"
				RenderMouseOver="{TemplateBinding IsMouseOver}"
				RenderFocused="{TemplateBinding IsKeyboardFocusWithin}"
				SnapsToDevicePixels="True"
				UseLayoutRounding="True">
				<Grid>
					<ScrollViewer
						Name="PART_ContentHost"
						SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
						HorizontalScrollBarVisibility="Auto"
						VerticalScrollBarVisibility="Auto"
						UseLayoutRounding="True" />
					<ProgressBar
						Name="PART_Progress"
						VerticalAlignment="Bottom"
						Height="10"
						Visibility="Collapsed" />
				</Grid>
			</themes:ListBoxChrome>
			<ControlTemplate.Triggers>
				<Trigger
					Property="IsEnabled"
					Value="False">
					<Setter
						TargetName="Bd"
						Value="{DynamicResource SystemColors.ControlBrushKey}"
						Property="themes:ListBoxChrome.Background" />
					<Setter
						Value="{DynamicResource SystemColors.GrayTextBrushKey}"
						Property="Foreground" />
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>
	</Control.Template>
</TextBox>
