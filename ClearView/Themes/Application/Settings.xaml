<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:camera="clr-namespace:EPIC.CameraInterface;assembly=CameraInterface"
    xmlns:customization="clr-namespace:EPIC.DataLayer.Customization;assembly=DataLayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EPIC.ClearView.Pages.Capture;assembly=EPICClearView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="d customization">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MedicalControls;component/Themes/Application/DataGridStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <BitmapImage x:Key="NewDevice" UriSource="/Resources/0176-scaner.png" />
    <BitmapImage x:Key="Save" UriSource="/Resources/0040-save.png" />
    <BitmapImage x:Key="Cancel" UriSource="/Resources/1001-cancel.png" />
    <BitmapImage x:Key="Captures" UriSource="/Resources/0176-scaner.png" />
    <BitmapImage x:Key="Settings" UriSource="/Resources/0020-options_edit.png" />
    <x:Array x:Key="SettingsTabs" Type="{x:Type ribbon:RibbonGroup}">
        <ribbon:RibbonGroup Header="Application">
            <ribbon:RibbonToggleButton
                Command="{DynamicResource CloseTabCommand}"
                IsChecked="True"
                Label="Settings"
                LargeImageSource="{StaticResource Settings}" />
        </ribbon:RibbonGroup>
        <ribbon:RibbonGroup Header="Device Settings">
            <ribbon:RibbonButton
                Command="{DynamicResource CloseTabCommand}"
                Label="Save and Close"
                LargeImageSource="{StaticResource Save}" />
        </ribbon:RibbonGroup>
    </x:Array>
</ResourceDictionary>
