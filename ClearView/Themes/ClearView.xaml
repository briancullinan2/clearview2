<ResourceDictionary
    x:Class="EPIC.ClearView.Themes.ClearView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:EPIC.DataLayer.Converters;assembly=DataLayer"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <converters:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter" />
    <converters:UriTabExistsConverter x:Key="UriTabExistsConverter" />
    <BitmapImage x:Key="Cancel" UriSource="/Resources/1001-cancel.png" />
    <DataTemplate x:Key="TabClosable">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="{Binding}" />
            <Image
                Width="20"
                Height="20"
                MouseDown="Image_MouseDown"
                Source="{StaticResource Cancel}" />
        </StackPanel>
    </DataTemplate>
    <Color x:Key="Window">White</Color>
    <Color x:Key="ClearViewForeground">DarkBlue</Color>
    <Color x:Key="ClearViewGreen">#66CC22</Color>
    <Color x:Key="ClearViewBlue">#112266</Color>
    <Color x:Key="WelcomeBackground">#336699</Color>
    <Color x:Key="WelcomeForeground">WhiteSmoke</Color>
    <Color x:Key="EpicDarkPurple">#113366</Color>
    <Color x:Key="EpicPurple">#9988CC</Color>
    <Color x:Key="EpicGreen">#AABB66</Color>
    <Color x:Key="EpicLightGreen">#77CC44</Color>
    <Color x:Key="MiddleLightDisabled">LightGray</Color>
    <Color x:Key="LightDisabled">#FFC2C2C2</Color>
    <Color x:Key="Disabled">#FF79848C</Color>
    <LinearGradientBrush x:Key="RedCloseButton" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#CC2200" />
        <GradientStop Offset="1" Color="DarkRed" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GrayCloseButton" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="LightGray" />
        <GradientStop Offset="1" Color="#FFC2C2C2" />
    </LinearGradientBrush>
    <Thickness x:Key="ControlBorderThickness">1</Thickness>
    <Thickness x:Key="ControlPaddingThickness">2</Thickness>
    <Thickness x:Key="ControlMarginThickness">5</Thickness>
    <system:Double x:Key="ControlStrokeThickness">2</system:Double>
    <system:Double x:Key="ControlFontSize">12</system:Double>
    <system:Double x:Key="BulletSize">16</system:Double>
    <SolidColorBrush x:Key="WindowBrush" Color="White" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#112266" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="#336699" />
    <SolidColorBrush x:Key="LightForeground" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="MiddleLightBrush" Color="#9988CC" />
    <SolidColorBrush x:Key="LightAccentBrush" Color="#AABB66" />
    <SolidColorBrush x:Key="AccentBrush" Color="#77CC44" />
    <SolidColorBrush x:Key="MiddleLightDisabledBrush" Color="LightGray" />
    <SolidColorBrush x:Key="LightDisabledBrush" Color="#FFC2C2C2" />
    <SolidColorBrush x:Key="DisabledBrush" Color="#FF79848C" />
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent" />
    <Style x:Key="LightLinkButton" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource LightForeground}" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource MiddleLightBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="LinkButton" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <GeometryDrawing
        x:Key="BlueStuff"
        Brush="{StaticResource ForegroundBrush}"
        Geometry="F1 M386.28,265.092 C386.28,371.748 299.808,458.22 193.14,458.22 C86.472,458.22 0,371.748 0,265.092 C0,158.424 86.472,71.952 193.14,71.952 C299.808,71.952 386.28,158.424 386.28,265.092" />
    <GeometryDrawing
        x:Key="GreenStuff"
        Brush="{StaticResource AccentBrush}"
        Geometry="F1 M372.672,232.452 C372.672,313.572 306.912,379.344 225.78,379.344 C144.66,379.344 78.888,313.572 78.888,232.452 C78.888,151.32 144.66,85.56 225.78,85.56 C306.912,85.56 372.672,151.32 372.672,232.452" />
    <GeometryDrawing
        x:Key="CheckMark"
        Brush="{StaticResource ForegroundBrush}"
        Geometry="F1 M251.7,220.392 L156.336,141.18 L249.816,339.504 L444.9,0 L251.7,220.392" />
    <DrawingGroup x:Key="Logo" />
    <DrawingBrush
        x:Key="LogoBrush"
        Drawing="{StaticResource Logo}"
        Stretch="Uniform" />
    <DrawingImage x:Key="LogoDrawing" Drawing="{StaticResource Logo}" />
    <Style x:Key="HorizontalScroller" TargetType="{x:Type ScrollViewer}" />
</ResourceDictionary>
