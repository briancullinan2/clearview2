<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:EPIC.MedicalControls.Controls.Capture;assembly=MedicalControls"
    xmlns:converters="clr-namespace:EPIC.ClearView.Utilities.Converters;assembly=EPICClearView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    xmlns:utilities="clr-namespace:EPIC.ClearView.Utilities;assembly=EPICClearView"
    mc:Ignorable="d controls">
    <BitmapImage x:Key="Cancel" UriSource="/Resources/1001-cancel.png" />
    <BitmapImage x:Key="Cycle" UriSource="/Resources/0186-refresh.png" />
    <BitmapImage x:Key="Reset" UriSource="/Resources/0063-undo.png" />
    <BitmapImage x:Key="AutoCalibrate" UriSource="/Resources/0005-time_edit.png" />
    <BitmapImage x:Key="Calibrate" UriSource="/Resources/0175-camera.png" />
    <BitmapImage x:Key="ExportData" UriSource="/Resources/0002-folder_doc.png" />
    <BitmapImage x:Key="ViewReport" UriSource="/Resources/0009-doc_search.png" />
    <BitmapImage x:Key="ViewCapture" UriSource="/Resources/0175-camera.png" />
    <BitmapImage x:Key="Captures" UriSource="/Resources/0176-scaner.png" />
    <x:Array x:Key="ScanOptions" Type="{x:Type ribbon:RibbonGroup}">
        <ribbon:RibbonGroup Header="ClearView">
            <!--
                UIElement.Focusable="False"
                UIElement.IsHitTestVisible="False"
            -->
            <ribbon:RibbonToggleButton
                Command="{DynamicResource CloseTabCommand}"
                IsChecked="True"
                Label="New Capture"
                LargeImageSource="{StaticResource Captures}" />
        </ribbon:RibbonGroup>
        <ribbon:RibbonGroup Header="Calibration Options">
            <ribbon:RibbonToggleButton Label="Export Data" LargeImageSource="{StaticResource ExportData}" />
            <ribbon:RibbonToggleButton Label="View Report" LargeImageSource="{StaticResource ViewReport}" />
            <ribbon:RibbonToggleButton Label="Capture Image" LargeImageSource="{StaticResource ViewCapture}" />
            <ribbon:RibbonToggleButton Label="Close" LargeImageSource="{StaticResource Cancel}" />
        </ribbon:RibbonGroup>
    </x:Array>
</ResourceDictionary>
