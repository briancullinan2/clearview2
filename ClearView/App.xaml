                <ResourceDictionary Source="/Themes/Buttons/RadioButton.xaml" />
                <ResourceDictionary Source="/Themes/Buttons/RepeatButton.xaml" />
                <ResourceDictionary Source="/Themes/Buttons/ToggleButton.xaml" />
                <ResourceDictionary Source="/Themes/Scrolls/ScrollViewer.xaml" />
                <ResourceDictionary Source="/Themes/Scrolls/ScrollBar.xaml" />
                <ResourceDictionary Source="/Themes/Application/Window.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
